                                break
                                
                        if not is_duplicate:
                            cleaned_card = clean_nan_values(card)
                            new_collection.append(cleaned_card)
                            saved_cards_count += 1
                
                if saved_cards_count > 0:
                    st.success(f"Added {saved_cards_count} additional cards from 'savedCards' field.")
            
        except Exception as user_doc_error:
