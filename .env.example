# Firebase Web App Configuration
# These values can be found in your Firebase Console under Project Settings > General > Your Apps > Web App
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_AUTH_DOMAIN=your_firebase_auth_domain
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_STORAGE_BUCKET=your_firebase_storage_bucket
FIREBASE_MESSAGING_SENDER_ID=your_firebase_messaging_sender_id
FIREBASE_APP_ID=your_firebase_app_id
FIREBASE_MEASUREMENT_ID=your_firebase_measurement_id

# Firebase Service Account
# These values can be found in your Firebase Console under Project Settings > Service Accounts
# Generate a new private key and download the JSON file
FIREBASE_PRIVATE_KEY_ID=your_private_key_id_here
FIREBASE_PRIVATE_KEY="your_private_key_here"
FIREBASE_CLIENT_EMAIL=your_client_email_here
FIREBASE_CLIENT_ID=your_client_id_here
FIREBASE_CLIENT_X509_CERT_URL=your_client_x509_cert_url_here

# Streamlit Configuration
# Default values for local development
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0

# External API Keys (Optional)
# Uncomment and add these if you plan to use these services
# EBAY_API_KEY=your_ebay_api_key_here
# PSA_API_KEY=your_psa_api_key_here

# Stripe Configuration
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret
STRIPE_SUCCESS_URL=https://your-app-url.com/success
STRIPE_CANCEL_URL=https://your-app-url.com/cancel

# Subscription Plans
STRIPE_BASIC_PLAN_PRICE_ID=price_basic_plan
STRIPE_PREMIUM_PLAN_PRICE_ID=price_premium_plan

# Application Configuration
APP_URL=https://your-app-url.com
ENVIRONMENT=development  # or production
DEBUG=True 